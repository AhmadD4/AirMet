@{
    ViewData["Title"] = "Home Page";
}
@model PropertyListViewModel




<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">
                        <i class="fas fa-home"></i>
                        <div>All</div>
                        <span class="sr-only">(current)</span>
                    </a>
                </div>
            </li>

            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link ms-3" asp-controller="Home" asp-action="PropertyTypes" asp-route-typeId="1">
                        <i class="fas fa-house-user"></i>
                        <div>House</div>
                    </a>
                </div>
            </li>
            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link ms-3" asp-controller="Home" asp-action="PropertyTypes" asp-route-typeId="2">
                        <i class="fas fa-building"></i>
                        <div>Apartment</div>
                    </a>
                </div>
            </li>
            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link ms-3" asp-controller="Home" asp-action="PropertyTypes" asp-route-typeId="3">
                        <i class="fas fa-campground"></i>
                        <div>Cabins</div>
                    </a>
                </div>
            </li>
            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link ms-3" asp-controller="Home" asp-action="PropertyTypes" asp-route-typeId="4">
                        <i class="fas fa-dungeon"></i>
                        <div>Domes</div>
                    </a>
                </div>
            </li>
            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link ms-3" asp-controller="Home" asp-action="PropertyTypes" asp-route-typeId="5">
                        <i class="fas fa-house"></i>
                        <div>Treehouses</div>
                    </a>
                </div>
            </li>
            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link ms-3" asp-controller="Home" asp-action="PropertyTypes" asp-route-typeId="6">
                        <i class="fas fa-swimming-pool"></i>
                        <div>Amazing Pools</div>
                    </a>
                </div>
            </li>


            <li class="nav-item">
                <div class="text-center">
                    <a class="nav-link ms-3" asp-controller="Home" asp-action="PropertyTypes" asp-route-typeId="7">
                        <i class="fas fa-ship"></i>
                        <div>Houseboats</div>
                    </a>
                </div>
            </li>


        </ul>
    </div>
</nav>

<div class="row row-cols-1 row-cols-md-4 g-3">
    @foreach (var property in Model.Properties)
    {
        <partial name="_PropertyCard" model="property" />
    }
</div>
