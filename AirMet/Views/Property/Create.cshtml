@model CreatePropertyViewModel

<h2>Publish your home</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Property.PTypeId"></label><span class="text-danger">*</span>
        <select asp-for="Property.PTypeId" asp-items="Model.PTypeSelectList" class="form-control">
            <option value="">Select an item...</option>
        </select>
        <span asp-validation-for="Property.PTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Title"></label><span class="text-danger">*</span>
        <input asp-for="Property.Title" class="form-control" />
        <span asp-validation-for="Property.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Description"></label><span class="text-danger">*</span>
        <input asp-for="Property.Description" class="form-control" />
        <span asp-validation-for="Property.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Price"></label><span class="text-danger">*</span>
        <input asp-for="Property.Price" class="form-control" />
        <span asp-validation-for="Property.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Address"></label>
        <input asp-for="Property.Address" class="form-control" />
        <span asp-validation-for="Property.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Guest"></label><span class="text-danger">*</span>
        <input asp-for="Property.Guest" class="form-control" />
        <span asp-validation-for="Property.Guest" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Bed"></label><span class="text-danger">*</span>
        <input asp-for="Property.Bed" class="form-control" />
        <span asp-validation-for="Property.Bed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.BedRooms"></label><span class="text-danger">*</span>
        <input asp-for="Property.BedRooms" class="form-control" />
        <span asp-validation-for="Property.BedRooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.BathRooms"></label><span class="text-danger">*</span>
        <input asp-for="Property.BathRooms" class="form-control" />
        <span asp-validation-for="Property.BathRooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Images</label>
        <div id="image-container">
            <!-- Placeholder for image inputs -->
        </div>
        <button type="button" id="add-image" class="btn btn-secondary">Add Image</button>
        <div id="preview-container">
            <!-- Placeholder for image previews -->
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Home" asp-action="List" class="btn btn-secondary">Cancel</a>

</form>

