@model IEnumerable<Property>
@using AirMet;

<div class="container">
    <table class='table table-striped table-hover'>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Price</th>
            <th>Addresse</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PropertyId</td>
                <td>
                    <a asp-controller="Property"
                       asp-action="Details"
                       asp-route-id="@item.PropertyId">@item.Title</a>
                </td>
                <td>@item.Price.ToString("0.00 NOK")</td>
                <td>@item.Address</td>
                <td>
                    <a class="link-dark" asp-controller="Property" asp-action="Update" asp-route-id="@item.PropertyId">Update</a>
                    <a class="link-danger" asp-controller="Property" asp-action="Delete" asp-route-id="@item.PropertyId">Delete</a>
                    <a class="link-success" asp-controller="Reservation" asp-action="ListReservations" asp-route-id="@item.PropertyId">Reservations</a>
                </td>
            </tr>
        }
    </table>
    <p>
        <a class="btn btn-secondary"
           asp-controller="Property"
           asp-action="Create">Add new home</a>
    </p>
</div>