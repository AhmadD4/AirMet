@model Property
@using AirMet

<div class="col">
    <div class="card custom-card">
        <img src="@Model.ImageUrl" class="card-img-top custom-card-img" alt="@Model.Description" />
        <div class="card-body">
            <h5 class="card-title">@Model.Address</h5>
            <p class="card-text">Price: @Model.Price.ToString("0.00 NOK")</p>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.PropertyId" class="btn btn-primary">View Details</a>
        </div>
    </div>
</div>

