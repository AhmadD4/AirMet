@model Property

<div class="col">
    <div>
        @if (Model.ImageData != null)
        {<img src="data:@Model.ImageMimeType;base64,@Convert.ToBase64String(Model.ImageData)" alt="@Model.Description" />}
        <div>
            <div class="d-flex justify-content-between mt-2">
                <h5 class="text-start">
                    <a asp-controller="Home"
                       asp-action="Details"
                       asp-route-id="@Model.PropertyId">View Details</a>
                </h5>
                <h5 class="text-start">@Model.Address</h5>
                <h5 class="text-nowrap">
                    @Model.Price.ToString("0.00 NOK")
                </h5>
            </div>
        </div>
    </div>
</div>