@model Reservation
<h2>Delete</h2>

<h3>Are you sure you want to delete this item?</h3>
<div>
   
    <dl class="row">
        <dt class="col-sm-2">The property:</dt>
        <dd class="col-sm-10">
        <a asp-controller="Property"
           asp-action="Details"
           asp-route-id="@Model.PropertyId">@Model.Property.Title</a></dd>

        <dt class="col-sm-2">Start Date:</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>

        <dt class="col-sm-2">End Date:</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>

        <dt class="col-sm-2">Number of Guest:</dt>
        <dd class="col-sm-10">@Model.NumberOfGuests</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ReservationId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Reservation" asp-action="Reservation" class="btn btn-secondary">Cancel</a>
    </form>
</div>