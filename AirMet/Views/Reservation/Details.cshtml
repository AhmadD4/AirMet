@model Reservation



<dl class="row">
    <dt class="col-sm-2">The property:</dt>
    <dd class="col-sm-10">
        <a asp-controller="Property"
           asp-action="Details"
           asp-route-id="@Model.PropertyId">@Model.Property.Title</a>
    </dd>

    <dt class="col-sm-2">Customer Name:</dt>
    <dd class="col-sm-10">@Model.Customer.Name</dd>

    <dt class="col-sm-2">Customer Age:</dt>
    <dd class="col-sm-10">@Model.Customer.Age</dd>

    <dt class="col-sm-2">Customer Address:</dt>
    <dd class="col-sm-10">@Model.Customer.Address</dd>

    <dt class="col-sm-2">Customer Phone:</dt>
    <dd class="col-sm-10">@Model.Customer.PhoneNumber</dd>

    <dt class="col-sm-2">Customer Email:</dt>
    <dd class="col-sm-10">@Model.Customer.Email</dd>

    <dt class="col-sm-2">Start Date:</dt>
    <dd class="col-sm-10">@Model.StartDate</dd>

    <dt class="col-sm-2">End Date:</dt>
    <dd class="col-sm-10">@Model.EndDate</dd>

    <dt class="col-sm-2">Number of Guest:</dt>
    <dd class="col-sm-10">@Model.NumberOfGuests</dd>
</dl>